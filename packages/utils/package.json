{
  "name": "@evermod/utils",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "yarn apollo:codegen && rollup -c",
    "watch": "rollup -cw",
    "apollo:download": "apollo client:download-schema --endpoint=http://localhost:3000/api/graphql graphql-schema.json",
    "apollo:codegen": "apollo client:codegen --target=typescript --outputFlat ./src/graphql/__generated__.ts"
  },
  "devDependencies": {
    "@wessberg/rollup-plugin-ts": "^1.3.4",
    "apollo": "^2.30.3",
    "rollup": "^2.26.11",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "@apollo/client": "^3.1.4"
  }
}
